#: kivy 2.0.0

<SimulationScreen>:
    size: root.size
    Button:
        text: 'test2'

<MainPanel>:
    size: root.width, root.height


<ControlPanel>:
    cols: 1
    size_hint_x: 0.33

<NumberPanel>:
    cols: 2

<NumberPanelTextInput>:
    # background_color: 1, 0, 0, 1

<NumberPanelLabel>:
    text_size: self.width, None

<InfoPanel>:
    orientation: 'vertical'

<EmployeeListScrollView>:
    size_hint_y: 1
    do_scroll_x: False
    do_scroll_y: True
    # size_hint_y: 0.9

<EmployeeListGrid>
    cols: 3

<EmployeeListLabel>:
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    padding: 10, 10

<WarehouseInfoPanel>:
    cols: 2
    size_hint_y: 0.2